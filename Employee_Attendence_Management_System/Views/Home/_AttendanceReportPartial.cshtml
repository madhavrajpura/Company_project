@model IEnumerable<DataAccessLayer.ViewModels.AttendanceViewModel>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No attendance records found for the selected criteria.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Employee</th>
                    <th>Check-In</th>
                    <th>Check-Out</th>
                    <th>Hours Worked</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.CheckInTime.ToString("HH:mm")</td>
                        <td>@(item.CheckOutTime != null ? item.CheckOutTime.ToString("HH:mm") : "-")</td>
                        <td>
                            @if (item.CheckOutTime != null)
                            {
                                var hours = (item.CheckOutTime - item.CheckInTime).TotalHours;
                                @Math.Round(hours, 2)
                            }
                            else
                            {
                                @:-
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}