@model DataAccessLayer.ViewModels.EmployeeAttendanceViewModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title fs-5 fw-bold text-secondary">Edit Attendance</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="mb-4">
            <h6 class="fw-bold text-secondary">Edit Attendance</h6>
            <form id="EditAttendanceForm">
                <input type="hidden" asp-for="NewAttendance.AttendanceId" />
                <input type="hidden" asp-for="NewAttendance.EmployeeId" />
                <div class="mb-3">
                    <input asp-for="NewAttendance.Date" class="form-control" type="date" id="EditDate" />
                    <span asp-validation-for="NewAttendance.Date" class="text-danger text-size"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NewAttendance.CheckInTime" class="form-label">Check-In Time</label>
                    <input asp-for="NewAttendance.CheckInTime" class="form-control" type="time" id="EditCheckIn" />
                    <span asp-validation-for="NewAttendance.CheckInTime" class="text-danger text-size"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NewAttendance.CheckOutTime" class="form-label">Check-Out Time</label>
                    <input asp-for="NewAttendance.CheckOutTime" class="form-control" type="time" id="EditCheckOut" />
                    <span asp-validation-for="NewAttendance.CheckOutTime" class="text-danger text-size"></span>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn solid-btn">Update</button>
                    <button type="button" class="btn hollow-btn" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>

        <div class="mt-5">
            <h6 class="fw-bold text-secondary">Attendance History</h6>
            @if (Model.AttendanceHistory.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Check-In</th>
                                <th>Check-Out</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.AttendanceHistory)
                            {
                                <tr>
                                    <td>@record.Date.ToString("yyyy-MM-dd")</td>
                                    <td>@record.CheckInTime.ToString("hh\\:mm tt")</td>
                                    <td>@record.CheckOutTime.ToString("hh\\:mm tt")</td>
                                    <td>
                                        <i class="fa-solid fa-pen edit-attendance" data-id="@record.EmployeeId"
                                            data-attenid="@record.AttendanceId" data-bs-toggle="modal"
                                            data-bs-target="#EditAttendanceModal" title="Edit"></i>
                                        <i class="fa-solid fa-trash delete-attendance" data-id="@record.EmployeeId"
                                            data-attenid="@record.AttendanceId" title="Delete"></i>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No attendance records found.</p>
            }
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

<script>
    $(document).ready(function () {
        const today = new Date().toISOString().split('T')[0];
        $("#EditDate").attr('max', today);

        // Handle form submission
        $("#EditAttendanceForm").on("submit", function (e) {
            e.preventDefault();
            let form = $(this);
            if (form.valid()) {
                let formData = new FormData(this);
                let checkIn = $("#EditCheckIn").val();
                let checkOut = $("#EditCheckOut").val();

                if (checkIn === "00:00" || checkOut === "00:00") {
                    callErrorToaster("Check-In and Check-Out times cannot be empty.");
                    return;
                }

                if (checkIn >= checkOut) {
                    callErrorToaster("Please enter valid Check-In and Check-Out times.");
                    return;
                }

                $.ajax({
                    url: "/Home/UpdateAttendance",
                    type: "POST",
                    contentType: false,
                    processData: false,
                    data: formData,
                    success: function (data) {
                        if (data.success) {
                            callSuccessToaster(data.text);
                            $("#EditAttendanceModal").modal("hide");
                            $("#SaveAttendanceModal").modal("hide");
                            Pagination(currentPage, searchText, pageSize, sortColumn, sortDirection);
                        } else {
                            callErrorToaster(data.text);
                        }
                    },
                    error: function () {
                        callErrorToaster("Error updating attendance");
                    }
                });
            }
        });
    });
</script>