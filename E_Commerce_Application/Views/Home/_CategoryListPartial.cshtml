@model DataAccessLayer.ViewModels.MainViewModel;

@if (Model == null)
{
    <p>No Categories found.</p>
}

<!-- Categories -->
@{
    int index_mod = 0;
}
@foreach (var category in Model.categoryListVM)
{
    <a class="ModifierGet @(index_mod == 0 ? "active-category" : "") d-flex align-items-center justify-content-between col-12 p-2 ps-3 text-decoration-none text-secondary"
        data-id="@category.CategoryId">

        <div class="d-flex justify-content-start">
            <i class="fa-solid fa-grip-vertical me-2 mt-1"></i>
            <p class="mt-1">@category.CategoryName</p>
        </div>

        <div class="d-flex text-secondary justify-content-end">
            <i class="fa-solid fa-pen me-2 text-secondary SaveCategoryId"
                data-id="@category.CategoryId" data-bs-toggle="modal" data-bs-target="#SaveCategoryModal"></i>

            <i class="fa-solid fa-trash-can text-secondary" onclick="GetIdForDeleteCategory(this)"
                data-id="@category.CategoryId" data-bs-toggle="modal" data-bs-target="#DeleteCategoryModal"></i>
        </div>
    </a>
    index_mod++;
}